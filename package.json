{
  "name": "nota-app",
  "version": "0.1.0",
  "license": "ISC",
  "scripts": {
    "dev": "next dev",
    "clean": "rimraf .next out",
    "build": "next build",
    "build:analyze": "ANALYZE=1 next build",
    "start": "next start",
    "test:firestore:account": "firebase emulators:exec --only firestore \"jest src/test/firestore-account.test.ts --silent\"",
    "test:firestore:article": "firebase emulators:exec --only firestore \"jest src/test/firestore-article.test.ts --silent\"",
    "lint": "next lint --dir src",
    "format": "prettier --check --ignore-path .gitignore './**/*.{js,jsx,ts,tsx}'",
    "format:fix": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx}'",
    "export:firestore:indexes": "firebase firestore:indexes > firestore.indexes.json",
    "deploy:firestore:rules": "firebase deploy --only firestore:rules",
    "deploy:firestore:indexes": "firebase deploy --only firestore:indexes",
    "deploy:storage:rules": "firebase deploy --only storage:rules"
  },
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@reduxjs/toolkit": "^1.6.2",
    "dayjs": "^1.10.7",
    "draft-js": "^0.11.7",
    "firebase": "^9.1.2",
    "modern-css-reset": "^1.4.0",
    "next": "11.1.2",
    "next-seo": "^4.28.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-dropzone": "^11.4.2",
    "react-easy-crop": "^3.5.3",
    "react-hook-form": "^7.17.4",
    "react-icons": "^4.3.1",
    "react-redux": "^7.2.5"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.3.0",
    "@firebase/rules-unit-testing": "^2.0.1",
    "@next/bundle-analyzer": "^11.1.2",
    "@types/draft-js": "^0.11.6",
    "@types/jest": "^27.0.2",
    "@types/react": "17.0.29",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.19",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "4.4.4"
  }
}
